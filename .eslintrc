{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "plugins": [],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "__DEV__": true
  },
  "rules": {
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 80,
        "useTabs": false,
        "tabWidth": 2,
        "endOfLine": "auto"
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["@/configs", "./src/configs"],
        ["@/middlewares", "./src/middlewares"],
        ["@/features", "./src/features"],
        ["@/providers", "./src/providers"],
        ["@/types", "./src/types"],
        ["@/utils", "./src/utils"]
      ]
    }
  }
}
