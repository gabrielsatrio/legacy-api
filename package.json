{
  "name": "ais-server",
  "version": "1.0.0",
  "description": "AIS - Server",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "ATJDEV Team",
  "license": "ATJ",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/atjdev/ais-server.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev --poll --respawn --transpile-only src/index.ts",
    "start": "cross-env NODE_ENV=production ./node_modules/pm2/bin/pm2 start dist/index.js -i max",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "db:migrate": "yarn typeorm migration:run",
    "db:revert": "yarn typeorm migration:revert",
    "db:seed:up": "yarn development src/db/seeds/seedsUp.ts",
    "db:seed:down": "yarn development src/db/seeds/seedsDown.ts",
    "g:entity": "yarn typeorm entity:create -n",
    "g:migration": "yarn typeorm migration:generate -n",
    "typeorm": "yarn development ./node_modules/typeorm/cli.js",
    "development": "DOTENV_CONFIG_PATH=./.env.development ts-node -P ./tsconfig.json -r dotenv/config",
    "gen-env": "gen-env-types .env.development -o src/types/env.d.ts -e . && rm -fr .env.example",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "apollo-server-express": "^2.23.0",
    "argon2": "^0.27.0",
    "chalk": "^4.1.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.5.0",
    "graphql-upload": "^11.0.0",
    "helmet": "^4.4.1",
    "ioredis": "^4.17.3",
    "module-alias": "^2.2.2",
    "nodemailer": "^6.4.16",
    "oracledb": "^5.1.0",
    "pm2": "^4.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0",
    "typeorm": "^0.2.28",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/chance": "^1.1.0",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "^0.0.14",
    "@types/dotenv-flow": "^3.1.0",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/graphql-upload": "^8.0.4",
    "@types/ioredis": "^4.17.4",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^14.11.4",
    "@types/nodemailer": "^6.4.0",
    "@types/oracledb": "^5.1.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chance": "^1.1.7",
    "dotenv-flow": "^3.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gen-env-types": "^1.0.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "_moduleAliases": {
    "@/config": "src/config",
    "@/middlewares": "src/middlewares",
    "@/features": "src/features",
    "@/providers": "src/providers",
    "@/types": "src/types",
    "@/utils": "src/utils"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  }
}
